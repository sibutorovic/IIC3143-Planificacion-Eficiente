      <div class="" style="margin-top:7px;">
        <label id="prev-learning-label" style="padding-right:50px">Values</label>
      </div>
      <div class=>
        <input id="prev-learning-add" type=text  style="width:30%;"class="form-control" placeholder="Agregar conocimiento previo">
        <a   onClick="a_onClick()" class="btn btn-primary">Add</a>
      </div>
    </div>
