<script>
  $(document).ready(function() {
  });
  function a_onClick() {
    var new_val = $('#prev-learning-add').val();
    if(new_val != ""){

      var vals = $('#prev-learning-label').text();
      var sep = ", "
      if(vals == "Values") {
        $('#prev-learning-label').text(" ");
        var vals = ""
        var sep = ""
      }
      $('#prev-learning-label').text(vals  + sep + new_val);
      $('#prev-learning-add').val("");
    }
    else {
      alert("El campo no puede ser vacio");
    }
  }
 </script>
