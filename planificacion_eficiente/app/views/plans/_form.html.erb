<%= form_for(@plan, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @plan.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h4>

      <ul>
      <% @plan.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :grade, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :grade, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subject, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :subject, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :year, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_hours, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :total_hours, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
