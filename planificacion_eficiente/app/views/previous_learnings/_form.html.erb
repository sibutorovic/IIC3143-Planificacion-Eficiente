<%= form_for(@previous_learning, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @previous_learning.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@previous_learning.errors.count, "error") %> prohibited this previous_learning from being saved:</h4>

      <ul>
      <% @previous_learning.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :generic_activity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :generic_activity, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :achievement_indicator, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :achievement_indicator, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estimated_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :estimated_time, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
